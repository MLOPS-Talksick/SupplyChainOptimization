[flake8]
max-line-length = 79
extend-ignore = E203, W503, D100, D101, D102, D103, D104, D105, D200, D202, D205, D400, D401, F401, F403, F405, F541, F811, F841
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,.venv,venv,env
per-file-ignores =
    # Allow F401 (unused imports) in __init__.py files:
    __init__.py: F401 